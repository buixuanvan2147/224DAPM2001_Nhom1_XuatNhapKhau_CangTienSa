@model Website_CangTienSa.Models.danhMucContainer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

<style>
    /* Container chính cho toàn bộ nội dung */
    .details-container {
        display: flex;
        justify-content: center;
        align-items: flex-start; /* Căn trên thay vì căn giữa tuyệt đối */
        padding: 30px 20px 70px 20px;
        min-height: calc(100vh - 56px); /* Đảm bảo đủ chiều cao */
        color: #E2E8F0; /* Màu chữ sáng */
    }

    /* Card chứa thông tin chi tiết */
    .details-card {
        background-color: #2D3748; /* Màu nền phụ tối */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        width: 100%;
        max-width: 800px; /* Giới hạn chiều rộng tối đa của card */
        transition: transform 0.3s ease-in-out;
    }

    .details-card:hover {
        transform: translateY(-5px);
    }

    /* Tiêu đề trang chi tiết */
    .details-title {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 700;
        color: #4FD1C5; /* Màu nhấn */
        margin-bottom: 25px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .details-card hr {
        border-color: #4A5568; /* Màu đường kẻ ngang */
        margin-bottom: 30px;
    }

    /* Danh sách chi tiết (thay thế dl-horizontal) */
    .details-list {
        display: grid;
        grid-template-columns: 60% 40%; /* Cột label tự động chiều rộng, cột giá trị chiếm phần còn lại */
        gap: 15px 30px; /* Khoảng cách giữa các hàng và cột */
        margin-bottom: 30px;
    }

    .details-label {
        font-size: 1rem;
        font-weight: 600;
        color: #A0AEC0; /* Màu xám nhạt cho label */
        text-align: left; /* Căn trái label */
        /* padding-right: 15px; */ /* Đã loại bỏ padding-right */
    }

    .details-value {
        font-size: 1rem;
        color: #E2E8F0; /* Màu chữ sáng cho giá trị */
        font-weight: 500;
    }

    /* Nhóm nút hành động */
    .details-actions-group {
        display: flex;
        justify-content: center; /* Căn giữa các nút */
        align-items: center;
        gap: 15px; /* Khoảng cách giữa các nút */
        margin-top: 30px;
        margin-bottom: 20px; /* Khoảng cách với link quay lại */
    }

    .action-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        border: none;
        color: #ffffff;
    }

    .action-button i {
        margin-right: 8px;
    }

    /* Màu cho từng loại nút hành động */
    .action-button.edit { /* Nút Sửa */
        background-color: #FCD34D; /* Vàng */
        color: #1A202C; /* Chữ tối */
    }
    .action-button.edit:hover {
        background-color: #FBBF24;
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
    }

    .action-button.delete { /* Nút Xóa */
        background-color: #EF4444; /* Đỏ */
    }
    .action-button.delete:hover {
        background-color: #DC2626;
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
    }

    /* Link quay lại danh sách */
    .back-link-container {
        text-align: center;
        margin-top: 20px;
    }

    .back-link {
        color: #63B3ED; /* Màu xanh dương cho link */
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #4299E1; /* Màu xanh đậm hơn khi hover */
        text-decoration: underline;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .details-card {
            padding: 30px;
            border-radius: 8px;
        }

        .details-title {
            font-size: 1.8rem;
            margin-bottom: 20px;
        }

        .details-list {
            grid-template-columns: 1fr; /* Một cột trên mobile */
            gap: 15px;
        }

        .details-label {
            text-align: left; /* Căn trái label trên mobile */
            padding-right: 0;
            font-size: 0.9rem;
        }

        .details-value {
            font-size: 0.9rem;
        }

        .details-actions-group {
            flex-direction: column; /* Xếp nút dọc trên mobile */
            gap: 10px;
        }

        .action-button {
            width: 100%; /* Nút chiếm toàn bộ chiều rộng */
            padding: 12px 20px;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 480px) {
        .details-card {
            padding: 20px;
        }

        .details-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="details-container">
    <div class="details-card">
        <h2 class="details-title">CHI TIẾT DANH MỤC CONTAINER</h2>

        <hr />
        <dl class="details-list">
            <dt class="details-label">
                Tên Danh Mục Container
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.tenDanhMucContainer)
            </dd>

            <dt class="details-label">
                Sức Chứa Tối Đa
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.sucChuaToiDa) (mét khối)
            </dd>

            <dt class="details-label">
                Trọng Tải Tối Đa
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.trongTaiToiDa) (tấn)
            </dd>

            <dt class="details-label">
                Chiều Dài
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.chieuDai) (mét)
            </dd>

            <dt class="details-label">
                Chiều Rộng
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.chieuRong) (mét)
            </dd>

            <dt class="details-label">
                Chiều Cao
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.chieuCao) (mét)
            </dd>

            <dt class="details-label">
                Mô Tả
            </dt>
            <dd class="details-value">
                @Html.DisplayFor(model => model.moTa)
            </dd>
        </dl>

        <div class="details-actions-group">
            <a href="@Url.Action("QTV_QLDH_SuaDanhmucContainer", "QuanTriVien_QLDH_DMContainer", new { id = Model.maDanhMucContainer })" class="action-button edit" title="Sửa">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a href="@Url.Action("QTV_QLDH_XoaDanhmucContainer", "QuanTriVien_QLDH_DMContainer", new { id = Model.maDanhMucContainer })" class="action-button delete" title="Xóa">
                <i class="fas fa-trash-alt"></i> Xóa
            </a>
        </div>

        <div class="back-link-container">
            @Html.ActionLink("Quay lại danh sách", "QTV_QLDH_IndexDanhmucContainer", "QuanTriVien_QLDH_DMContainer", null, new { @class = "back-link" })
        </div>
    </div>
</div>

