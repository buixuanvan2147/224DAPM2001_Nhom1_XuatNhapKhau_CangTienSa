
@{
    ViewBag.Title = "Đăng Ký Thành Công";
    Layout = "~/Views/Shared/_LayoutKhachVangLai.cshtml";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', Arial, sans-serif;
        background-color: #f4f7fa;
        color: #333;
        line-height: 1.6;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        min-height: 100vh;
        padding: 40px 20px;
        overflow: auto;
    }

    section {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    h1 {
        color: #1a1a1a;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .success-message {
        background-color: #d4edda;
        color: #155724;
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 1rem;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        background-color: #28a745;
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    .btn:active {
        transform: translateY(0);
    }

    @@media (max-width: 600px) {
        section {
            padding: 20px;
        }

        h1 {
            font-size: 1.5rem;
        }
    }
</style>

<main aria-labelledby="title">
    <section>
        <h1 id="title">ĐĂNG KÝ THÀNH CÔNG</h1>
        <div class="success-message">
            Yêu cầu đăng ký của bạn đã được gửi thành công. Vui lòng chờ quản trị viên duyệt tài khoản của bạn.
        </div>
        <a href="@Url.Action("DangNhap", "Home")" class="btn">Quay lại Đăng nhập</a>
    </section>
</main>

