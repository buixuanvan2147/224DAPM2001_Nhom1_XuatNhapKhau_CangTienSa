@{
    ViewBag.Title = "LienHe";
}

<main style="min-height: calc(100vh - 160px);">
    <!-- Header Start -->
    <div class="jumbotron jumbotron-fluid mb-5">
        <div class="container text-center py-5">
            <h1 class="text-white display-3">Liên Hệ</h1>
            <div class="d-inline-flex align-items-center text-white">
                <p class="m-0"><a class="text-white" href="@Url.Action("Index", "Home")">Trang Chủ</a></p>
                <i class="fa fa-circle px-3"></i>
                <p class="m-0">Liên Hệ</p>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 pb-4 pb-lg-0">
                    <div class="bg-primary text-dark text-center p-4">
                        <h4 class="m-0"><i class="fa fa-map-marker-alt text-white mr-2"></i>Cảng Tiên Sa, Thọ Quang, Sơn Trà, Đà Nẵng</h4>
                    </div>
                    <iframe style="width: 100%; height: 470px;"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.123892843856!2d108.22257831459762!3d16.115141988849073!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x314218e7e3b54b4d%3A0x6e6d9b6f2c4b2e2a!2sTien%20Sa%20Port!5e0!3m2!1svi!2s!4v1698173820143!5m2!1svi!2s"
                            frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
                <div class="col-lg-7">
                    <h6 class="text-primary text-uppercase font-weight-bold">Liên Hệ Với Chúng Tôi</h6>
                    <h1 class="mb-4">Hỗ Trợ Mọi Thắc Mắc Về Xuất Nhập Khẩu</h1>
                    <div class="contact-info mb-4">
                        <p><i class="fa fa-phone-alt mr-2"></i>+84 236 123 4567</p>
                        <p><i class="fa fa-envelope mr-2"></i>info@tiensa-port.com</p>
                        <p><i class="fa fa-clock mr-2"></i>Thứ 2 - Thứ 6: 8:00 - 17:00</p>
                    </div>
                    <div class="contact-form bg-secondary" style="padding: 30px;">
                        <div id="success"></div>
                        <div class="control-group">
                            <input type="text" class="form-control border-0 p-4" id="name" placeholder="Họ và Tên" required="required" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="email" class="form-control border-0 p-4" id="email" placeholder="Email Của Bạn" required="required" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control border-0 p-4" id="subject" placeholder="Chủ Đề" required="required" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control border-0 py-3 px-4" rows="3" id="message" placeholder="Nội Dung Tin Nhắn" required="required"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        <div>
                            <a href="mailto:info@tiensa-port.com?subject=Liên Hệ Từ Website" class="btn btn-primary py-3 px-4">Gửi Tin Nhắn</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
</main>