@{
    ViewBag.Title = "Tra Cứu Đơn Hàng";
}
<style>
    /* General adjustments for smaller screens (phones) */
@@media (max-width: 767.98px) {
    main {
        padding-top: 1rem !important; /* Giảm padding top của main */
        margin-bottom: 20px !important; /* Giảm margin bottom của main */
    }

    .container.mt-5 {
        margin-top: 2rem !important; /* Điều chỉnh margin top của container */
        padding-left: 15px; /* Thêm padding ngang */
        padding-right: 15px; /* Thêm padding ngang */
    }

    /* Adjustments for the "Tra Cứu Đơn Hàng Khác" section */
    .mt-4.p-4.border.rounded.shadow-sm {
        margin-top: 1rem !important; /* Giảm margin top */
        padding: 1rem !important; /* Giảm padding */
    }

    .mt-4.p-4.border.rounded.shadow-sm h2 {
        font-size: 1.3rem; /* Giảm kích thước font tiêu đề */
        margin-bottom: 0.8rem !important;
    }

    .input-group {
        flex-direction: column; /* Đặt input và button trên hai hàng */
        align-items: stretch; /* Kéo dãn các mục con */
    }

    .input-group input[type="text"] {
        padding: 12px !important; /* Giảm padding cho input */
        margin-bottom: 10px; /* Thêm khoảng cách dưới input */
        border-radius: 0.25rem !important; /* Làm tròn góc cho input */
        text-align: center; /* Căn giữa text trong input */
    }

    .input-group-append {
        margin-left: 0 !important; /* Bỏ margin-left */
        width: 100%; /* Chiếm toàn bộ chiều rộng */
    }

    .input-group-append button {
        width: 100%; /* Nút chiếm toàn bộ chiều rộng */
        padding: 12px 15px !important; /* Giảm padding cho nút */
        border-radius: 0.25rem !important; /* Làm tròn góc cho nút */
    }

    /* Adjustments for alert messages */
    .alert.mt-4 {
        margin-top: 1rem !important; /* Giảm margin top */
        padding: 0.6rem 1rem !important; /* Giảm padding */
        font-size: 0.9rem; /* Giảm kích thước font */
    }

    /* Adjustments for the "Thông Tin Đơn Hàng" and "Chi Tiết Đơn Hàng" sections */
    .mt-5.p-4.border.rounded.shadow-sm {
        margin-top: 2rem !important; /* Điều chỉnh margin top */
        padding: 1rem !important; /* Giảm padding */
    }

    .mt-5.p-4.border.rounded.shadow-sm h2 {
        font-size: 1.3rem; /* Giảm kích thước font tiêu đề */
        margin-bottom: 0.8rem !important;
    }

    /* Table specific adjustments for responsiveness */
    .custom-table {
        min-width: unset !important; /* Bỏ min-width để bảng co giãn */
        width: 100%; /* Đảm bảo bảng chiếm toàn bộ chiều rộng */
        display: block; /* Cho phép cuộn ngang */
        overflow-x: auto; /* Hiển thị thanh cuộn ngang nếu nội dung tràn */
        white-space: nowrap; /* Giữ nội dung không xuống dòng trong cell */
    }

    .custom-table thead, .custom-table tbody, .custom-table th, .custom-table td, .custom-table tr {
        display: block; /* Đặt tất cả các phần tử bảng là block để xếp chồng */
    }

    .custom-table thead tr {
        position: absolute; /* Ẩn hàng tiêu đề gốc */
        top: -9999px;
        left: -9999px;
    }

    .custom-table tr {
        border: 1px solid #dee2e6;
        margin-bottom: 10px;
        display: flex; /* Sử dụng flexbox để sắp xếp các cột */
        flex-wrap: wrap; /* Cho phép các cột xuống dòng */
    }

    .custom-table td {
        border: none; /* Bỏ border mặc định giữa các cell */
        border-bottom: 1px solid #dee2e6; /* Thêm border dưới cho mỗi cell */
        position: relative;
        padding-left: 50% !important; /* Tạo không gian cho label giả */
        text-align: right; /* Căn phải nội dung */
        flex-basis: 100%; /* Mỗi cell chiếm toàn bộ chiều rộng có thể */
        padding-top: 0.5rem !important; /* Giảm padding top */
        padding-bottom: 0.5rem !important; /* Giảm padding bottom */
    }

    .custom-table td:before {
        content: attr(data-label); /* Hiển thị label từ thuộc tính data-label */
        position: absolute;
        left: 6px;
        width: 45%; /* Chiều rộng của label */
        padding-right: 10px;
        white-space: nowrap;
        text-align: left; /* Căn trái label */
        font-weight: bold;
        color: #343a40; /* Màu chữ cho label */
    }

    /* Specific data labels for each column */
    .custom-table td:nth-of-type(1):before { content: "Mã Đơn Hàng:"; }
    .custom-table td:nth-of-type(2):before { content: "Tên Người Nhận:"; }
    .custom-table td:nth-of-type(3):before { content: "Cảng Đích Đến:"; }
    .custom-table td:nth-of-type(4):before { content: "Ngày Tạo:"; }
    .custom-table td:nth-of-type(5):before { content: "Lưu Trữ:"; }
    .custom-table td:nth-of-type(6):before { content: "Ngày Xuất Cảng:"; }
    .custom-table td:nth-of-type(7):before { content: "Ngày Nhập Cảng:"; }
    .custom-table td:nth-of-type(8):before { content: "Trạng Thái Đơn Hàng:"; }
    .custom-table td:nth-of-type(9):before { content: "Thanh Toán:"; }
    .custom-table td:nth-of-type(10):before { content: "Tổng Tiền:"; }
    .custom-table td:nth-of-type(11):before { content: "Mô Tả:"; }

    /* Data labels for order details table */
    #orderDetailsBody td:nth-of-type(1):before { content: "Mã Đơn Hàng:"; }
    #orderDetailsBody td:nth-of-type(2):before { content: "Tên Danh Mục:"; }
    #orderDetailsBody td:nth-of-type(3):before { content: "Tên Hàng Hóa:"; }
    #orderDetailsBody td:nth-of-type(4):before { content: "Số Lượng:"; }
    #orderDetailsBody td:nth-of-type(5):before { content: "Chất Lượng:"; }
    #orderDetailsBody td:nth-of-type(6):before { content: "Đơn Vị Tính:"; }
    #orderDetailsBody td:nth-of-type(7):before { content: "Đơn Giá:"; }
    #orderDetailsBody td:nth-of-type(8):before { content: "Tiền Lưu Kho:"; }
    #orderDetailsBody td:nth-of-type(9):before { content: "Mô Tả:"; }
}

/* Adjustments for medium screens (tablets) */
@@media (min-width: 768px) and (max-width: 991.98px) {
    .container.mt-5 {
        margin-top: 3rem !important; /* Giữ margin top */
    }

    .mt-4.p-4.border.rounded.shadow-sm,
    .mt-5.p-4.border.rounded.shadow-sm {
        padding: 1.5rem !important; /* Giữ padding */
    }

    .mt-4.p-4.border.rounded.shadow-sm h2,
    .mt-5.p-4.border.rounded.shadow-sm h2 {
        font-size: 1.5rem; /* Điều chỉnh kích thước font */
    }

    .input-group input[type="text"] {
        padding: 15px !important; /* Giữ padding cho input */
    }

    .input-group-append button {
        padding: 15px 20px !important; /* Giữ padding cho button */
    }

    .custom-table {
        min-width: 700px; /* Đảm bảo bảng có min-width trên tablet nếu cần */
    }
}
</style>
<main style="min-height: calc(100vh - 160px); padding-top:0; margin-bottom: 50px;">
