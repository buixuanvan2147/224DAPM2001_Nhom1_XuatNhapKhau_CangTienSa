                        <a href="@Url.Action("XemChiTietDonHang", "KhachHang", new { maDonHang = don.maDonHang })" class="btn btn-sm btn-outline-primary">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
