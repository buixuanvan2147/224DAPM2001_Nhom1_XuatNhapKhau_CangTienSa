            <div style="color: #fff; padding-top: 50px; padding-bottom: 30px; margin-bottom: 30px; font-size: 24px; font-weight: 700; text-align: center; border-radius: 8px; background-image: url('@Url.Content("~/Content/img/cangtiensa.jpg")'); background-size: cover; background-position: center; background-repeat: no-repeat; box-shadow: 0 4px 8px rgba(0,0,0,0.2); flex-shrink: 0;">
